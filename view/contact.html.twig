<div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <form action="" method="post" role="form">
            <input type="hidden" name="id" value="{{ userManager.getId }}">
            <legend>Formulaire de contact</legend>

            <div class="form-group">
                <label for="">Prénom</label>
                <input type="text" class="form-control" name="firstname" id="firstname"
                       placeholder="Entrez votre prénom" value="{{ userManager.getFirstName }}">
            </div>
            <div class="form-group">
                <label for="">Nom</label>
                <input type="text" class="form-control" name="lastname" id="lastname"
                       placeholder="Entrez votre nom" value="{{ userManager.getLastName }}">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="text" class="form-control" name="email" id="email"
                       placeholder="Entrez votre email" value="{{ userManager.getEmail }}">
            </div>
            <div class="form-group">
                <label for="">Mot de passe</label>
                <input type="text" class="form-control" name="password" id="password"
                       placeholder="Entrez votre mot de passe" value="{{ userManager.getPassword }}">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></div>
</div>